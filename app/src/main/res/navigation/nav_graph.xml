<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ejemplo.mobyhook.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.ejemplo.mobyhook.ViewPagerFragment"
        android:label="fragment_tabs_vp"
        tools:layout="@layout/fragment_tabs_vp"
        />
    <fragment
        android:id="@+id/tab2Fragment"
        android:name="com.ejemplo.mobyhook.Tab2Fragment"
        android:label="fragment_tab2"
        tools:layout="@layout/fragment_tab2" >
        <action
            android:id="@+id/action_tab2Fragment_to_recyclerViewMenuFragment"
            app:destination="@id/recyclerViewMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/recyclerViewMenuFragment"
        android:name="com.ejemplo.mobyhook.RecyclerViewMenuFragment"
        android:label="fragment_menu_rv"
        tools:layout="@layout/fragment_menu_rv" />
</navigation>