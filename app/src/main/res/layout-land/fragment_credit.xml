<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentCredit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreditFragment">

    <TextView
        android:text="@string/send_email_message"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvEmailRecipient"
        android:text="@string/email_recipient"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginStart="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvEmailSubject"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etEmailRecipient"
        android:text="@string/email_recipient_default"
        android:textSize="14sp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etEmailSubject"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvEmailSubject"
        android:text="@string/email_subject"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailRecipient"
        app:layout_constraintBottom_toTopOf="@+id/tvEmailBody"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etEmailSubject"
        android:text="@string/email_subject_default"
        android:textSize="14sp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmailRecipient"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvEmailBody"
        android:text="@string/email_body"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailSubject"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etEmailBody"
        android:textSize="14sp"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmailSubject"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnSendEmail"
        android:text="@string/send_email_button"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEmailReturn"
        />

    <Button
        android:id="@+id/btnEmailReturn"
        android:text="@string/go_back_menu"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSendEmail"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>